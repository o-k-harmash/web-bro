@model LearningPathViewModel

<article class="card row gap-md">

    <!-- 🌟 Контейнер основного содержания -->
    <section class="col gap-md sz-2">

        <!-- 🏷 Уровень сложности -->
        <div class="level-tag">
            <span class="level-tag__number">1</span>
            <span class="level-tag__title">@Model.LearningPath.Tag</span>
        </div>

        <!-- 🔗 Заголовок с переходом на другой ресурс -->

        <h2>
            <a asp-action="Step" asp-route-pathId="@Model.LearningPath.Id"
                asp-route-stepId="@Model.NextStep.Id">@Model.LearningPath.Name</a>
        </h2>

        <p class="learning-path-card__description">@Model.LearningPath.Description</p>

        <div>
            <div class="learning-path-card__progress-bar"></div>
            <div class="learning-path-card__progress-percentage">0% completed</div>
        </div>
    </section>

    <!-- 🎨 Медиа-контент карточки -->
    <aside class="sz-1">
        <a asp-action="Step" asp-route-pathId="@Model.LearningPath.Id" asp-route-stepId="@Model.NextStep.Id">
            <img class="learning-path-card__media" src="@Model.LearningPath.ImageUrl" alt="Learning path image">
        </a>
    </aside>
</article>