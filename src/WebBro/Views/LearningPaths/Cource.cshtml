@model List<LearningPathPreviewVm>

@{
    ViewData["Title"] = "index";
}
<div class="lp-idx-head pd-i-md">
    <section class="container-md row gap-lg justify-between">
        <article class="preview preview_head preview_course">
            <!-- 🌟 Контейнер основного содержания -->
            <section class="preview__main">
                <h1 class="preview__header">Learning paths</h1>

                <p class="preview__description">Our learning paths help you improve your front-end skills step by step.
                    Each
                    path covers a different topic, guiding you through essential front-end development topics to become
                    a
                    skilled developer.</p>
            </section>
            <aside class="preview__aside">
                <img class="preview__media"
                    src="https://www.frontendmentor.io/_next/image?url=%2Fstatic%2Fimages%2Flearning-paths-hero.webp&w=1200&q=75"
                    alt="">
            </aside>
        </article>
    </section>
</div>

<div class="lp-idx-main container-sm pd-b-md">
    <ul class="cource">
        @foreach (var learningPath in Model)
        {
            <li class="preview preview_card">
                <!-- 🌟 Контейнер основного содержания -->
                <section class="preview__main">
                    <!-- 🏷 Уровень сложности -->
                    <div class="preview__tag">
                        <span class="preview__tag-danger">1</span>
                        <span>newbie</span>
                    </div>
                    <!-- 🔗 Заголовок с переходом на другой ресурс -->
                    @{
                        var link = Url.Action("Details", "LearningPaths", new { learningPathId = learningPath.Id });
                    }
                    <h3 class="preview__header">
                        <a href="@link">@learningPath.Title</a>
                    </h3>

                    <p class="preview__description">@learningPath.Description</p>

                    <div class="preview__progress">
                        @{
                            var percentage = @learningPath.Completion;
                        }
                        <div class="preview__progress-bar" style="--data-percentage: @percentage%;"></div>
                        <div class="preview__progress-percentage">@percentage% completed</div>
                    </div>
                </section>
                <!-- 🎨 Медиа-контент карточки -->
                <a class="preview__aside" href="@link">
                    <img class="preview__media" src="@learningPath.ImageUrl" alt="Learning path image">
                </a>
            </li>
        }
    </ul>
</div>
